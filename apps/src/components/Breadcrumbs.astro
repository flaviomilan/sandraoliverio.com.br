---
// Define a interface para os itens de breadcrumb
interface BreadcrumbItem {
  text: string;
  url: string;
  current?: boolean;
}

// Define as props que o componente aceita
interface Props {
  items: BreadcrumbItem[];
}

// Obtém os itens de breadcrumb das props
const { items } = Astro.props;
---

<nav aria-label="Navegação de migalhas de pão" class="breadcrumbs-container">
  <ol class="breadcrumbs" itemscope itemtype="https://schema.org/BreadcrumbList">
    {items.map((item, index) => (
      <li 
        class={`breadcrumb-item ${item.current ? 'current' : ''}`}
        itemprop="itemListElement" 
        itemscope 
        itemtype="https://schema.org/ListItem"
      >
        {item.current ? (
          <span itemprop="name">{item.text}</span>
        ) : (
          <a href={item.url} itemprop="item">
            <span itemprop="name">{item.text}</span>
          </a>
        )}
        <meta itemprop="position" content={`${index + 1}`} />
        {index < items.length - 1 && (
          <span class="separator">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
              <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
            </svg>
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumbs-container {
    padding: 15px 0;
    background-color: var(--color-light);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .breadcrumbs {
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
    list-style: none;
    max-width: var(--container-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }
  
  .breadcrumb-item {
    display: flex;
    align-items: center;
    font-size: 0.9rem;
    color: var(--color-text);
  }
  
  .breadcrumb-item a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .breadcrumb-item a:hover {
    color: var(--color-gold);
    text-decoration: underline;
  }
  
  .breadcrumb-item.current {
    color: var(--color-text-light);
    font-weight: 500;
  }
  
  .separator {
    display: inline-flex;
    align-items: center;
    margin: 0 10px;
    color: var(--color-text-light);
  }
  
  @media (max-width: 768px) {
    .breadcrumbs-container {
      padding: 10px 0;
    }
    
    .breadcrumb-item {
      font-size: 0.8rem;
    }
    
    .separator {
      margin: 0 5px;
    }
  }
</style>
