---
interface Props {
  name: string;
  feedback: string;
  image?: string;
}

const { name, feedback, image } = Astro.props;
---

<div class="testimonial-card">
  <div class="quote-symbol">&ldquo;</div>
  <div class="testimonial-content">
    <p class="testimonial-text">{feedback}</p>
    <div class="testimonial-divider"></div>
    <div class="testimonial-author-container">
      {image && 
        <div class="testimonial-avatar">
          <img src={image} alt={name} />
        </div>
      }
      <p class="testimonial-author">{name}</p>
    </div>
  </div>
</div>

<style>
  .testimonial-card {
    background-color: rgba(255, 255, 255, 0.97);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    padding: 50px 45px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-soft);
    position: relative;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    border: 1px solid rgba(84, 84, 84, 0.05);
    height: 100%;
    overflow: hidden;
  }
  
  .testimonial-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-medium);
  }
  
  .quote-symbol {
    position: absolute;
    top: 15px;
    left: 25px;
    font-family: var(--font-primary);
    font-size: 5.5rem;
    line-height: 1;
    color: var(--color-taupe);
    opacity: 0.06;
    z-index: 0;
    transition: all 0.5s ease;
  }
  
  .testimonial-card:hover .quote-symbol {
    transform: translateY(-3px);
    opacity: 0.08;
  }
  
  .testimonial-content {
    position: relative;
    z-index: 1;
  }
  
  .testimonial-text {
    font-family: var(--font-primary);
    font-style: italic;
    font-size: 1.15rem;
    line-height: 1.9;
    color: var(--color-text);
    margin-bottom: 35px;
    position: relative;
    font-weight: 300;
  }
  
  .testimonial-divider {
    width: 40px;
    height: 1px;
    background: linear-gradient(90deg, var(--color-taupe), rgba(204, 192, 182, 0.3));
    margin-bottom: 25px;
    transition: all 0.5s ease;
    opacity: 0.7;
  }
  
  .testimonial-card:hover .testimonial-divider {
    width: 60px;
    opacity: 0.9;
  }
  
  .testimonial-author-container {
    display: flex;
    align-items: center;
  }
  
  .testimonial-avatar {
    width: 55px;
    height: 55px;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 18px;
    border: 1px solid rgba(204, 192, 182, 0.2);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .testimonial-card:hover .testimonial-avatar {
    border-color: rgba(204, 192, 182, 0.4);
  }
  
  .testimonial-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  
  .testimonial-card:hover .testimonial-avatar img {
    transform: scale(1.05);
  }
  
  .testimonial-author {
    font-weight: 400;
    color: var(--color-button);
    font-size: 1rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    opacity: 0.9;
  }
  
  @media (max-width: 768px) {
    .testimonial-card {
      padding: 45px 35px;
    }
    
    .testimonial-text {
      font-size: 1.05rem;
    }
    
    .quote-symbol {
      font-size: 4.5rem;
    }
  }
</style>